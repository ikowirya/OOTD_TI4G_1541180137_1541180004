<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Ini untuk menampilkan text OOTD-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OOTD Fragment"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="150sp"
        android:id="@+id/ootdText"
        />

    <!--Ini untuk menampilkan text Nama 1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agung Surya Tamaka - 1541180137"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tamaID"
        android:layout_below="@+id/ootdText"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <!--Ini untuk menampilkan text Nama 2-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muhammad Iko Wiryadirja - 1541180004"
        android:id="@+id/ikoID"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_below="@id/tamaID"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linLay"
        android:layout_below="@+id/ikoID"
        android:layout_marginTop="50dp">

        <!--Ini untuk menampilkan button pindah-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halaman Selanjutnya"
            android:id="@+id/btnPindah"/>
    </LinearLayout>

</RelativeLayout>